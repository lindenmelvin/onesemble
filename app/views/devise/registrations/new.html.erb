<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {data: {validate: 'parsley'}}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, data: { required: 'true', type: 'email' } %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, data: { required: 'true', :minlength => "6" } %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, data: { required: 'true', equalto: "#user_password", :minlength => "6" } %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
