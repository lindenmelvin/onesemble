<h2>Login</h2>

<%= form_for(resource, html: {data: {validate: 'parsley'}}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, data: { required: 'true', type: 'email'}, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, data: { required: 'true', :minlength => "6" } %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
