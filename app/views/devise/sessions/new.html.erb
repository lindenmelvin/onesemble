<div id="login-container">
  <div>login</div>

  <%= form_for(resource, html: {data: {validate: 'parsley'}}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
    <%= f.email_field :email, data: { required: 'true', type: 'email'}, :autofocus => true, placeholder: 'email' %></div>

    <div>
    <%= f.password_field :password, data: { required: 'true', :minlength => "6" }, placeholder: 'password' %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in" %></div>
  <% end %>

  <div>
    <%= link_to "sign up", new_registration_path(resource_name) %>
    <%= link_to "forgot password", new_password_path(resource_name) %>
  </div>
</div>