<%= form_for @message do |f| %>
  <div><%= f.label :body %><br />
  <%= f.text_area :body %></div>

  <%= f.hidden_field :sender_id, :value => current_user.id %>
  <%= f.hidden_field :receiver_id, :value => @receiver_id %>
  <%= f.hidden_field :parent_id %>
  
  <div><%= f.submit "Send Message" %></div>
<% end %>