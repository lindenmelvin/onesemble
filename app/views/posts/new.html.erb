<%= link_to "My Profile", user_path(current_user) %>
<%= link_to "New Post", new_post_path %>
<%= link_to "Posts", posts_path %>

<%= form_for @post do |f| %>
  <div><%= f.label :subject %><br />
  <%= f.text_field :subject %></div>

  <div><%= f.label :body %><br />
  <%= f.text_area :body %></div>
  
  <div>
    <div>Pick an Instrument</div>
    <% @instruments.each do |instrument| %>
      <input type="radio" id="instrument-<%= instrument.name %>" name="post[instrument_id]" value="<%= instrument.id %>"/>
      <label for="instrument-<%= instrument.name %>"><%= instrument.name %></label>
    <% end %>
  </div>
  
  <div>
    <div>Pick a Genre</div>
    <% @genres.each do |genre| %>
      <input type="radio" id="genre-<%= genre.name %>" name="post[genre_id]" value="<%= genre.id %>"/>
      <label for="genre-<%= genre.name %>"><%= genre.name %></label>
    <% end %>
  </div>
  
  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <div><%= f.submit "Create Post" %></div>
<% end %>